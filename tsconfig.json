{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2022",
    "lib": [
      "es2019",
      "dom" 
    ],
    "module": "CommonJS",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "allowJs": true,
    "declaration": true,
    "resolveJsonModule": true,
    "types": [
      "node" // Consider conditionally including this only for Node.js builds
    ],
    "rootDir": "./src", // Define root directory
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts",
    ".vscode"
  ]
}